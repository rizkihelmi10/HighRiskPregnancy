<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/greeting"
            android:text="Welcome, "
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/cekrisiko"
            android:layout_width="350dp"
            android:layout_height="145dp"
            android:background="@drawable/buttonshaped"
            android:text="Cek Risiko"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:drawableTop="@drawable/customimage"
            android:drawablePadding="0dp"


            />

        <Button
            android:id="@+id/account"
            android:layout_width="350dp"
            android:layout_height="145dp"
            android:background="@drawable/buttonshaped"
            android:text="Akun"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:drawableTop="@drawable/accountcustomimage"
            android:drawablePadding="0dp"/>

        <Button
            android:id="@+id/history"
            android:layout_width="350dp"
            android:layout_height="145dp"
            android:text="Daftar pasien"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonshaped"
            android:textStyle="bold"
            android:textSize="20dp"
            android:drawableTop="@drawable/historycustom"
            android:drawablePadding="0dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>